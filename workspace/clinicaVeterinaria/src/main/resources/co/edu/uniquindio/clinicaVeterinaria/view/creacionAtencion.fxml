<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.clinicaVeterinaria.controllers.CreacionAtencionController">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" spacing="40.0">
         <children>
            <Label id="titulo" styleClass="texto" stylesheets="@../styles/textStyle.css" text="Creacion de atencion veterinaria" />
         </children>
      </HBox>
      <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="309.0" styleClass="texto" stylesheets="@../styles/textStyle.css" text="Veterinario:" GridPane.rowIndex="3" />
            <Label fx:id="lblVeterinario" alignment="TOP_CENTER" prefHeight="17.0" prefWidth="301.0" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <DatePicker fx:id="txtDate" prefHeight="25.0" prefWidth="201.0" styleClass="textField" stylesheets="@../styles/txtFieldStyle.css" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
               <children>
                  <Label styleClass="texto" stylesheets="@../styles/textStyle.css" text="Fecha:" />
               </children>
            </VBox>
            <Label styleClass="texto" stylesheets="@../styles/textStyle.css" text="Hora:" GridPane.rowIndex="2" />
            <TextField fx:id="txtTime" promptText="HH:mm" styleClass="textField" stylesheets="@../styles/txtFieldStyle.css" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets left="50.0" right="50.0" />
               </GridPane.margin>
            </TextField>
            <Label styleClass="texto" stylesheets="@../styles/textStyle.css" text="Ingresa la cedula de cliente:" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="8.0" GridPane.columnIndex="1">
               <children>
                  <TextField fx:id="txtCliente" prefHeight="25.0" prefWidth="150.0" styleClass="textField" stylesheets="@../styles/txtFieldStyle.css" />
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarEvent" styleClass="boton" stylesheets="@../styles/buttonStyle.css" text="Buscar" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <TableView fx:id="tblMascotas" prefHeight="217.0" prefWidth="600.0" stylesheets="@../styles/tableStyle.css">
        <columns>
          <TableColumn fx:id="colNombre" maxWidth="1.7976931348623157E308" minWidth="120.0" prefWidth="-1.0" text="Nombre" />
          <TableColumn fx:id="colEdad" minWidth="120.0" prefWidth="-1.0" text="Edad" />
            <TableColumn fx:id="colSexo" minWidth="120.0" prefWidth="-1.0" text="Sexo" />
            <TableColumn fx:id="colTipo" minWidth="120.0" prefWidth="-1.0" text="Tipo" />
            <TableColumn fx:id="colRaza" minWidth="120.0" prefWidth="-1.0" text="Raza" />
        </columns>
      </TableView>
      <Button fx:id="btnCrear" mnemonicParsing="false" onAction="#crearEvent" styleClass="boton" stylesheets="@../styles/buttonStyle.css" text="Crear">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin></Button>
   </children>
</VBox>
